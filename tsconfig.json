{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "lib": ["DOM", "es2015"],
    "removeComments": false,
    "moduleResolution": "Bundler",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "nuxt"]
}
